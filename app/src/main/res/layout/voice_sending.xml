<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5">



    <com.example.widget.FingerWaveView
        android:id="@+id/view_custom"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        app:cave_radius="30dp"
        />

    <com.example.widget.DragView
        android:id="@+id/iv_execute_drag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_finger_status"
        />

    <ImageView
        android:id="@+id/iv_execute"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_finger_status"/>


    <TextView
        android:id="@+id/tv_finger_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_execute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/chat_up_finger_press"
        android:textColor="#fd7a72"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/iv_drag_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/selector_chat_drag_del"/>
</RelativeLayout>