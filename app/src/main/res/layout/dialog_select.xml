<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_white_radius_10">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        android:textColor="#999"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view_line_title_below"
        android:background="@color/bg_divider_line"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp_25"
        android:layout_height="wrap_content"
        android:textColor="@color/color_3"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/view_line_title_below"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <Button
        android:id="@+id/btn_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/tv_title"
        android:background="@null"
        android:textColor="@color/color_3"
        android:textSize="@dimen/sp_14"
        android:text="取消"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_right"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        />

    <View
        android:id="@+id/view_line_subtitle_below"
        android:background="@color/bg_divider_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"/>
    <View
        android:id="@+id/view_line_middle"
        android:background="@color/bg_divider_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_48"/>
    <Button
        android:id="@+id/btn_right"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:layout_alignTop="@+id/btn_left"
        android:background="@null"
        android:textColor="@color/color_toolbar"
        android:textSize="@dimen/sp_14"
        android:text="确定"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintLeft_toRightOf="@+id/btn_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_left"
        />

</android.support.constraint.ConstraintLayout>